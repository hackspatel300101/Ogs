<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Buy_productDetails">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Address details for Product Delivery"
        android:textSize="25dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/final_photo"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/kevi"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="15dp"
                        />
                    <TextView
                        android:id="@+id/final_name"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Kevi"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Quantity:"
                        android:textSize="15dp"
                        />
                    <TextView
                        android:id="@+id/final_qyt"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="1 pc"
                        android:textSize="15dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Total:"
                        android:textSize="15dp"
                        />
                    <TextView
                        android:id="@+id/final_total"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="30"
                        android:textSize="15dp"
                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_bold"
                android:textAlignment="center"
                android:text="Delivery Address"
                android:textSize="15dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:hint="Delivery Address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:lines="20"
                    android:minLines="5"
                    android:id="@+id/name_address"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/buy_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginTop="150dp"
        android:background="@drawable/buy_now_bg"
        android:text="Place Oder"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>



</LinearLayout>